{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug pytest - single integration test",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-o",
        "addopts=''",
        "tests/integration/test_integration_notion.py::test_integration_list_databases",
        "-s",
        "-vv",
        "-r",
        "a"
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "Attach to Docker: Notion API",
      "type": "python",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/app"
        }
      ]
    }
  ]
}
